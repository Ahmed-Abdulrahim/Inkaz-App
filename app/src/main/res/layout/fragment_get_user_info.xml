<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.GetUserInfoFragment"
    android:fillViewport="true"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name *"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_name"
            android:background="@drawable/input_shape"
            android:hint="Ahmed Mohamed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="text"
            app:layout_constraintVertical_bias="0.37"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National ID *"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_national_id"
            android:background="@drawable/input_shape"
            android:hint="*************"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="number"
            app:layout_constraintVertical_bias="0.37"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:maxLength="15"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address *"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_address"
            android:background="@drawable/input_shape"
            android:hint="Mansoura"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="text"
            app:layout_constraintVertical_bias="0.37"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Model &amp; Year"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ed_car_model"
                android:background="@drawable/input_shape"
                android:hint="Tesla"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintVertical_bias="0.37"
                android:layout_marginStart="@dimen/_12sdp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textColorHint="@color/gray_500"
                android:importantForAutofill="no"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ed_car_year"
                android:background="@drawable/input_shape"
                android:hint="2021"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
                android:inputType="number"
                app:layout_constraintVertical_bias="0.37"
                android:layout_marginStart="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:maxLines="1"
                android:maxLength="4"
                android:textColorHint="@color/gray_500"
                android:importantForAutofill="no"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Color *"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_car_color"
            android:background="@drawable/input_shape"
            android:hint="Red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="text"
            app:layout_constraintVertical_bias="0.37"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_12sdp"
            android:maxLines="1"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car License Plate *"
            android:textStyle="bold"
            android:textColor="@color/light_red"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_12sdp"
            />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2"
           >

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/ed_car_number"
               android:background="@drawable/input_shape"
               android:hint="2595"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginEnd="@dimen/_12sdp"
               android:inputType="number"
               app:layout_constraintVertical_bias="0.37"
               android:layout_marginStart="@dimen/_12sdp"
               android:textColor="@color/black"
               android:maxLines="1"
               android:maxLength="4"
               android:textColorHint="@color/gray_500"
               android:importantForAutofill="no"
               android:layout_weight="1"
               android:layout_marginTop="@dimen/_2sdp"
               android:layout_marginBottom="@dimen/_2sdp"
               />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/ed_car_letter"
               android:background="@drawable/input_shape"
               android:hint="س ج ط"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginEnd="@dimen/_12sdp"
               android:inputType="text"
               app:layout_constraintVertical_bias="0.37"
               android:layout_marginStart="@dimen/_12sdp"
               android:textColor="@color/black"
               android:layout_weight="1"
               android:maxLines="1"
               android:maxLength="5"
               android:textColorHint="@color/gray_500"
               android:importantForAutofill="no"
               android:layout_marginTop="@dimen/_2sdp"
               android:layout_marginBottom="@dimen/_2sdp"
               />

       </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_45sdp"
            android:textAlignment="center"
            android:text="Confirm"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:background="@drawable/button_dis_enable"
            android:layout_margin="@dimen/_12sdp"
            android:textAllCaps="false"
            android:id="@+id/btn_confirm"
            android:enabled="true"
            />

    </LinearLayout>


</ScrollView>