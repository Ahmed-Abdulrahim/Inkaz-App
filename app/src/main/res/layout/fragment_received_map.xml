<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.received.ReceivedMapFragment">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/user_img"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/received_map"
        android:layout_marginBottom="@dimen/_10sdp"
        />

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_65sdp"
        android:src="@drawable/user2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/user_img"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/user_img"
        app:layout_constraintTop_toTopOf="@id/user_img"
        android:text="Ahmed Mohamed"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginStart="@dimen/_4sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:id="@+id/user_name"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintRight_toRightOf="@id/user_name"
        android:text="015578654848"
        android:maxLines="1"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:id="@+id/user_mobile"
        android:layout_marginTop="@dimen/_3sdp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/user_mobile"
        app:layout_constraintRight_toRightOf="@id/user_name"
        android:maxLines="1"
        android:text="Ahmed@gmail.com"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:id="@+id/user_email"
        />

</androidx.constraintlayout.widget.ConstraintLayout>