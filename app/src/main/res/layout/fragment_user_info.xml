<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.profile.edit_profile.UserInfoFragment"
    android:orientation="vertical"
    android:background="@color/background"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_info_appbar"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/baseline_arrow_back"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            app:title="Personal Info"
            android:id="@+id/personal_info_toolbar"
            app:menu="@menu/edit_profile_meniu"
            >
        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name *"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_name"
        android:background="@drawable/input_shape"
        android:hint="Ahmed Mohamed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:inputType="text"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textColorHint="@color/gray_500"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/_12sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_address"
        android:background="@drawable/input_shape"
        android:hint="Mansoura"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:inputType="text"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:layout_margin="@dimen/_12sdp"
        android:textColorHint="@color/gray_500"
        android:importantForAutofill="no"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National ID *"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_natioinal_id"
        android:background="@drawable/input_shape"
        android:hint="*************"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:inputType="number"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:maxLength="15"
        android:layout_margin="@dimen/_12sdp"
        android:textColorHint="@color/gray_500"
        android:importantForAutofill="no" />



</LinearLayout>