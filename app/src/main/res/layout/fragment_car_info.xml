<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.profile.edit_profile.CarInfoFragment"
    android:orientation="vertical"
    android:background="@color/background"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_info_appbar"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/baseline_arrow_back"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            app:title="Car Info"
            android:id="@+id/car_info_toolbar"
            app:menu="@menu/edit_profile_meniu"
            >
        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Model *"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_12sdp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_car_model"
            android:background="@drawable/input_shape"
            android:hint="Tesla"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="text"
            app:layout_constraintVertical_bias="0.37"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_car_year"
            android:background="@drawable/input_shape"
            android:hint="2021"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:inputType="number"
            app:layout_constraintVertical_bias="0.37"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="4"
            android:textColorHint="@color/gray_500"
            android:importantForAutofill="no"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Color *"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_car_color"
        android:background="@drawable/input_shape"
        android:hint="Red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:inputType="text"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_12sdp"
        android:maxLines="1"
        android:textColorHint="@color/gray_500"
        android:importantForAutofill="no"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Number *"
        android:textColor="@color/light_red"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12sdp"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="2"
       android:layout_marginTop="@dimen/_12sdp"
       >

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/ed_car_number"
           android:background="@drawable/input_shape"
           android:hint="2595"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginEnd="@dimen/_12sdp"
           android:inputType="number"
           app:layout_constraintVertical_bias="0.37"
           android:layout_marginStart="@dimen/_12sdp"
           android:textColor="@color/black"
           android:maxLines="1"
           android:maxLength="4"
           android:textColorHint="@color/gray_500"
           android:importantForAutofill="no"
           android:layout_weight="1"
           android:layout_marginTop="@dimen/_2sdp"
           android:layout_marginBottom="@dimen/_2sdp"
           />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/ed_car_letter"
           android:background="@drawable/input_shape"
           android:hint="س ج ط"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginEnd="@dimen/_12sdp"
           android:inputType="text"
           app:layout_constraintVertical_bias="0.37"
           android:layout_marginStart="@dimen/_12sdp"
           android:textColor="@color/black"
           android:layout_weight="1"
           android:maxLines="1"
           android:maxLength="5"
           android:textColorHint="@color/gray_500"
           android:importantForAutofill="no"
           android:layout_marginTop="@dimen/_2sdp"
           android:layout_marginBottom="@dimen/_2sdp"
           />

   </LinearLayout>


</LinearLayout>