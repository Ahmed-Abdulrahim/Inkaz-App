<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/purple_550"/>
            <size android:width="@dimen/_45sdp"
                android:height="@dimen/_45sdp"/>
            <stroke android:width="@dimen/_2sdp" android:color="@color/purple_300"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/purple_off"/>
            <size android:width="@dimen/_45sdp"
                android:height="@dimen/_45sdp"/>
            <stroke android:width="@dimen/_2sdp" android:color="@color/light_purple_10"/>
        </shape>
    </item>

</selector>